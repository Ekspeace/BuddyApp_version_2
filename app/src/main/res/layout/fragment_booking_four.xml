<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BookingFragmentFour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="25dp"
        android:orientation="vertical">
        <include
            android:id="@+id/ProgressBar_four"
            android:visibility="gone"
            layout="@layout/progressbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/receipt_border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_text_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="Check your booking information"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryLight"
                android:fontFamily="@font/helvetica_bold"/>

            <ImageView
                android:id="@+id/image_receipt_display"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/car_wash"
                android:background="@drawable/icon_border"
                android:layout_gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="6dp"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="User information"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:fontFamily="@font/helvetica_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="13sp"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/colorPrimaryLight"/>

                <TextView
                    android:id="@+id/receipt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sihle"
                    android:fontFamily="@font/helvetica"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="13sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:textSize="13sp"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/colorPrimaryLight"/>

                <TextView
                    android:id="@+id/receipt_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0847773850"
                    android:fontFamily="@font/helvetica"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="13sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textSize="13sp"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/colorPrimaryLight"/>

                <TextView
                    android:id="@+id/receipt_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 Van Rooy Universitas Bloemfontein"
                    android:fontFamily="@font/helvetica"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="13sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="6dp"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="Service information"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:fontFamily="@font/helvetica_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service: "
                    android:textSize="13sp"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/colorPrimaryLight"/>

                <TextView
                    android:id="@+id/receipt_service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car Wash"
                    android:fontFamily="@font/helvetica"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="13sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Specification: "
                    android:textSize="13sp"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/colorPrimaryLight"/>

                <TextView
                    android:id="@+id/receipt_service_specification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/helvetica"
                    android:text="Sudan - Outside"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="13sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date and Time: "
                    android:textSize="13sp"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/colorPrimaryLight"/>

                <TextView
                    android:id="@+id/receipt_service_time_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 May at 09:00 - 10:00 "
                    android:fontFamily="@font/helvetica"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="13sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textSize="13sp"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/colorPrimaryLight"/>

                <TextView
                    android:id="@+id/receipt_service_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R 50,00"
                    android:fontFamily="@font/helvetica"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="13sp"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="6dp"
                android:background="@color/colorPrimaryLight"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="Thank you for your service"
                android:textSize="11dp"
                android:textColor="@color/colorPrimaryLight"
                android:fontFamily="@font/helvetica_italic"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_receipt_confirm"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/button_view"
            android:fontFamily="@font/helvetica"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />
    </LinearLayout>

</FrameLayout>